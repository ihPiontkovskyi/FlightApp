<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controls.MainWindowController">
   <children>
      <TabPane fx:id="mainPane" layoutY="41.0" prefHeight="359.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab id="Airport" text="Airport">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView id="Airport" fx:id="airportTable" editable="true" layoutY="1.0" prefHeight="331.0" prefWidth="600.0">
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab id="Flight" text="Flight">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView id="Flight" fx:id="flightTable" prefHeight="331.0" prefWidth="600.0">
                           <columns>
                               <TableColumn prefWidth="75.0" text="Flight number" >
                                   <cellValueFactory>
                                       <PropertyValueFactory property="flightID" />
                                   </cellValueFactory>
                               </TableColumn>
                           </columns></TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab id="Client" text="Client">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView id="Client" fx:id="clientTable" prefHeight="331.0" prefWidth="600.0" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab id="Board" text="Board">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                         <TableView id="Board" fx:id="boardTable" prefHeight="331.0" prefWidth="600.0" editable="true" >
                           <columns>
                               <TableColumn prefWidth="75.0" text="Board number" >
                                   <cellValueFactory>
                                       <PropertyValueFactory property="boardID" />
                                   </cellValueFactory>
                               </TableColumn>
                           </columns>
                         </TableView>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab id="Ticket" text="Ticket">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView id="Ticket" fx:id="ticketTable" prefHeight="331.0" prefWidth="600.0" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab id="FlightInfo" text="Flight info">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView id="FlightInfo" fx:id="flightInfoTable" prefHeight="331.0" prefWidth="600.0" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
      <Button fx:id="searchBtn" layoutX="214.0" layoutY="10.0" mnemonicParsing="false" text="Search" />
      <Button fx:id="saveTableBtn" layoutX="129.0" layoutY="10.0" mnemonicParsing="false" text="Save table" />
      <Button fx:id="deleteBtn" layoutX="64.0" layoutY="10.0" mnemonicParsing="false" text="Delete" />
      <Button fx:id="addBtn" layoutX="14.0" layoutY="10.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="38.0" text="Add" />
   </children>
</AnchorPane>
