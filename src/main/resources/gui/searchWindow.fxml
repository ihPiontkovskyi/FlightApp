<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="305.0" xmlns="http://javafx.com/javafx/8.0.201"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.controllers.windowControllers.SearchWindowController">
    <TabPane prefHeight="353.0" prefWidth="302.0" tabClosingPolicy="UNAVAILABLE">
        <Tab text="Airport">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="324.0" prefWidth="525.0">
                <Label layoutX="52.0" layoutY="44.0" text="City:"/>
                <Label layoutX="48.0" layoutY="82.0" text="Code:"/>
                <TextField fx:id="cityField" layoutX="97.0" layoutY="40.0"/>
                <TextField fx:id="codeField" layoutX="97.0" layoutY="78.0"/>
            </AnchorPane>
        </Tab>
        <Tab text="Flight">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <TextField fx:id="timeField" layoutX="117.0" layoutY="49.0"/>
                <DatePicker fx:id="flightDateField" layoutX="117.0" layoutY="14.0"/>
                <Label layoutX="46.0" layoutY="18.0" text="Date:"/>
                <Label layoutX="46.0" layoutY="53.0" text="Time:"/>
            </AnchorPane>
        </Tab>
        <Tab text="Board">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <Label layoutX="69.0" layoutY="37.0" text="Jet type:"/>
                <Label layoutX="21.0" layoutY="106.0" text="Date of last repair:"/>
                <Label layoutX="66.0" layoutY="70.0" text="Free seat:"/>
                <TextField fx:id="jetTypeField" layoutX="126.0" layoutY="33.0"/>
                <TextField fx:id="freeSeatField" layoutX="126.0" layoutY="66.0"/>
                <DatePicker fx:id="lastRepairField" layoutX="126.0" layoutY="102.0"/>
            </AnchorPane>
        </Tab>
        <Tab text="Client">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <TextField fx:id="firstNameField" layoutX="122.0" layoutY="36.0"/>
                <TextField fx:id="lastNameField" layoutX="122.0" layoutY="72.0"/>
                <TextField fx:id="passportField" layoutX="122.0" layoutY="109.0"/>
                <Label layoutX="51.0" layoutY="40.0" text="First name:"/>
                <Label layoutX="52.0" layoutY="76.0" text="Last name:"/>
                <Label layoutX="52.0" layoutY="113.0" text="Passport id:"/>
            </AnchorPane>
        </Tab>
        <Tab text="Ticket">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <TextField fx:id="classField" layoutX="116.0" layoutY="42.0"/>
                <Label layoutX="41.0" layoutY="46.0" text="Class type:"/>
                <TextField fx:id="priceField" layoutX="116.0" layoutY="76.0"/>
                <Label layoutX="41.0" layoutY="80.0" text="Price:"/>
                <Label layoutX="9.0" layoutY="113.0" text="Date of purchase:"/>
                <DatePicker fx:id="purchaseField" layoutX="116.0" layoutY="109.0"/>
            </AnchorPane>
        </Tab>
    </TabPane>
    <Button fx:id="startSearch" layoutX="41.0" layoutY="361.0" mnemonicParsing="false" prefHeight="25.0"
            prefWidth="72.0" text="Search"/>
    <Button fx:id="cancelBtn" layoutX="175.0" layoutY="361.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="72.0"
            text="Cancel"/>
</AnchorPane>
